# .env.example
# Environment (development | production)
NODE_ENV="development"

# Prisma / Postgres (example format)
# e.g. postgresql://username:password@host:port/database?pgbouncer=true
DATABASE_URL="postgresql://<DB_USER>:<DB_PASSWORD>@<DB_HOST>:<DB_PORT>/<DB_NAME>?pgbouncer=true"
DIRECT_URL="postgresql://<DB_USER>:<DB_PASSWORD>@<DB_HOST>:<DB_PORT>/<DB_NAME>"

# Supabase
# Public values (safe for client) should begin with NEXT_PUBLIC_
NEXT_PUBLIC_SUPABASE_URL="https://<your-project>.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="REPLACE_WITH_ANON_KEY"

# Service role key (server-side only â€” DO NOT expose in client)
SUPABASE_SERVICE_ROLE_KEY="REPLACE_WITH_SERVICE_ROLE_KEY"

# Optional (if using access tokens)
# SUPABASE_ACCESS_TOKEN="REPLACE_WITH_ACCESS_TOKEN"

# Google provider (NextAuth)
NEXT_PUBLIC_GOOGLE_CLIENT_ID="REPLACE_WITH_GOOGLE_CLIENT_ID"
GOOGLE_CLIENT_SECRET="REPLACE_WITH_GOOGLE_CLIENT_SECRET"

# Reporting / email
REPORTS_TO_EMAIL="your-team@example.com"
RESEND_API_KEY="REPLACE_WITH_RESEND_API_KEY"
